---
const {
	hrefs: { about = '/', projects = '/', contact = '/' },
} = Astro.props

const currentPath = Astro.url.pathname
const isBlogRoute = currentPath.startsWith('/blog')
---

<nav class="bg-white shadow-sm z-10 relative">
	<div class="max-w-5xl mx-auto px-8 py-4">
		<div class="flex justify-between items-center">
			<a href="/" class="text-xl font-semibold text-gray-800"
				>Chris Tse <span class="hidden md:inline-block">| クリス</span></a
			>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex space-x-4">
				<a href={about} class="text-gray-600 hover:text-gray-900">About</a>
				<a href={projects} class="text-gray-600 hover:text-gray-900">Projects</a
				>
				<a href={contact} class="text-gray-600 hover:text-gray-900">Contact</a>
				<a
					href="/blog"
					class={`text-gray-600 hover:text-gray-900 ${isBlogRoute ? 'font-bold' : ''}`}
					>Blog</a
				>
			</div>

			<!-- Mobile Hamburger Button -->
			<button
				id="mobile-menu-button"
				class="md:hidden flex flex-col justify-center items-center w-8 h-8 space-y-1.5"
				aria-label="Toggle mobile menu"
			>
				<span
					class="hamburger-line w-6 h-0.5 bg-gray-800 transition-all duration-300"
				></span>
				<span
					class="hamburger-line w-6 h-0.5 bg-gray-800 transition-all duration-300"
				></span>
				<span
					class="hamburger-line w-6 h-0.5 bg-gray-800 transition-all duration-300"
				></span>
			</button>
		</div>

		<!-- Mobile Menu -->
		<div
			id="mobile-menu"
			class="md:hidden hidden absolute top-full left-0 right-0 bg-white shadow-lg border-t"
		>
			<div class="px-8 py-4 space-y-4">
				<a href={about} class="block text-gray-600 hover:text-gray-900 py-2"
					>About</a
				>
				<a href={projects} class="block text-gray-600 hover:text-gray-900 py-2"
					>Projects</a
				>
				<a href={contact} class="block text-gray-600 hover:text-gray-900 py-2"
					>Contact</a
				>
				<a
					href="/blog"
					class={`block text-gray-600 hover:text-gray-900 py-2 ${isBlogRoute ? 'font-bold' : ''}`}
					>Blog</a
				>
			</div>
		</div>
	</div>
</nav>

<style>
	/* Hamburger to X animation */
	.menu-open .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
	}

	.menu-open .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.menu-open .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(6px, -6px);
	}

	/* Mobile menu slide animation */
	#mobile-menu {
		transition: all 0.3s ease-in-out;
		max-height: 0;
		overflow: hidden;
	}

	#mobile-menu.show {
		max-height: 300px;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const menuButton = document.getElementById('mobile-menu-button')
		const mobileMenu = document.getElementById('mobile-menu')

		if (menuButton && mobileMenu) {
			menuButton.addEventListener('click', () => {
				const isOpen = mobileMenu.classList.contains('show')

				if (isOpen) {
					// Close menu - wait for animation to complete
					mobileMenu.classList.remove('show')
					menuButton.classList.remove('menu-open')
					setTimeout(() => mobileMenu.classList.add('hidden'), 300)
				} else {
					// Open menu
					mobileMenu.classList.remove('hidden')
					setTimeout(() => mobileMenu.classList.add('show'), 10)
					menuButton.classList.add('menu-open')
				}
			})
		}
	})
</script>
