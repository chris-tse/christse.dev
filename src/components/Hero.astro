---
import Face from './Face.astro'
import { Github, Linkedin } from 'lucide-astro'

const { contactId } = Astro.props
---

<div
	class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 relative overflow-hidden"
>
	<div class="max-w-5xl mx-auto px-4 py-20">
		<div class="flex flex-col md:flex-row items-center justify-between gap-12">
			<!-- Text Content -->
			<div class="flex-1">
				<h1 class="text-5xl font-bold text-gray-900 mb-6 leading-tight">
					Hey, I'm Chris ðŸ‘‹
					<span class="block mt-2"
					>Crafting <span class="text-purple-600">high-performance apps</span>
						at <span class="text-indigo-600">large scale</span></span
					>
				</h1>
				<p class="text-xl text-gray-600 mb-8 leading-relaxed">
					A <span class="font-medium text-purple-600">frontend engineer</span> specializing in
					<span class="font-medium text-indigo-600"> performance optimization</span>
					and building
					<span class="font-medium text-pink-600"> scalable UIs</span> that
					serve millions.
				</p>
				<div class="flex items-center space-x-6">
					<a
						href={`#${contactId}`}
						class="px-6 py-3 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition-colors"
					>
						Let's Connect
					</a>
					<div class="flex space-x-4">
						<a
							href="https://github.com/chris-tse"
							class="text-gray-600 hover:text-indigo-600 transition-colors"
						>
							<Github />
						</a>
						<a
							href="https://www.linkedin.com/in/chrismtse/"
							class="text-gray-600 hover:text-indigo-600 transition-colors"
						>
							<Linkedin />
						</a>
					</div>
				</div>
				<!-- Tech Stack Pills -->
				<div class="mt-8 flex flex-wrap gap-2">
					<span
						class="px-3 py-1 bg-white/60 text-indigo-600 rounded-full text-sm font-medium"
					>React</span
					>
					<span
						class="px-3 py-1 bg-white/60 text-purple-600 rounded-full text-sm font-medium"
					>TypeScript</span
					>
					<span
						class="px-3 py-1 bg-white/60 text-pink-600 rounded-full text-sm font-medium"
					>Next.js</span
					>
					<span
						class="px-3 py-1 bg-white/60 text-indigo-600 rounded-full text-sm font-medium"
					>Tailwind</span
					>
				</div>
			</div>

			<Face />
		</div>
	</div>
</div>
