---
import Dot from './Dot.astro'

interface Props {
	employer: string;
	title: string;
	dateRange: string;
	description: string;
}

const {
	employer,
	title,
	dateRange,
	description
} = Astro.props
---

<div class="work-history-item">
	<h3 class="mb-1 text-lg">
		<Dot />
		<span class="ml-2">
      <span class="font-bold">{employer} / </span> {title}
    </span>
	</h3>
	<div class="text-lg border border-gray-500 border-r-0 border-t-0 border-b-0 pl-4 ml-1 mb-6">
		<p class="mb-2 uppercase tracking-wider text-sm text-gray-600 font-semibold">{dateRange}</p>
		<p>{description}</p>
	</div>
</div>
