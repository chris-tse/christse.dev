---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/BlogPostLayout.astro'

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((entry) => ({
    params: { slug: entry.data.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
---

<Layout
	title={entry.data.title}
	pubDate={entry.data.publishedAt.toDateString() ?? null}
	heroImage={entry.data.coverImage ?? null}
	description={entry.data.description ?? null}
	socialImage={entry.data.coverImage ?? null}
>
	<article class="prose prose-purple lg:prose-md mx-auto">
		<div set:html={entry.data.content} />
	</article>
</Layout>
