---
import Hero from '../components/Hero.astro'
import Navigation from '../components/Navigation.astro'
import About from '../components/About.astro'
import WorkHistory from '../components/Work-History.astro'
import ProjectSection from '../components/Project-Section.astro'
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Chris Tse - Frontend Engineer</title>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="description" content="Chris Tse - Frontend Engineer and UI/UX Enthusiast">
</head>
<body class="min-h-screen bg-gray-50">

<Navigation />

<Hero />

<About />

<WorkHistory />

<ProjectSection />


<!-- Contact Section -->
<div id="contact" class="bg-gray-50 py-16">
	<div class="max-w-4xl mx-auto px-4">
		<h2 class="text-3xl font-bold text-gray-900 mb-8">Get in Touch</h2>
		<div class="bg-white rounded-lg shadow-sm p-6">
			<p class="text-gray-600 mb-6">
				I'm always open to discussing new projects or opportunities.
				Feel free to reach out!
			</p>
			<div class="flex space-x-4">
				<a
					href="mailto:chris@example.com"
					class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700"
				>
					Send Email
				</a>
				<a
					href="https://linkedin.com"
					class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50"
				>
					Connect on LinkedIn
				</a>
			</div>
		</div>
	</div>
</div>

<!-- Footer -->
<footer class="bg-white border-t border-gray-200">
	<div class="max-w-4xl mx-auto px-4 py-8">
		<p class="text-center text-gray-600">
			Â© 2024 Chris Tse. Built with Astro and Tailwind CSS.
		</p>
	</div>
</footer>
</body>
</html>